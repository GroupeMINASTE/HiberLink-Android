<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UploadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/upload_generate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="32dp"
            android:background="@color/colorPrimary"
            android:text="@string/upload_generate"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/upload_copy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="@string/upload_copy"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/upload_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:autofillHints=""
            android:hint="@string/upload_output"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/upload_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:autofillHints=""
            android:hint="@string/upload_input"
            android:inputType="textUri"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>